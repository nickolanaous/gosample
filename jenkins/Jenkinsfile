pipeline{

agent any

stages {
    stage("Clean up") {
        steps {
            deleteDir()
        }
    }

    stage("Clone repo") {
        steps {
        sh "git clone https://github.com/nickolanaous/gosample.git"
        }
    }

    stage("Build App") {
        steps {
            dir("gosample") {
                sh "GOROOT=/usr/local/go"
                sh "GOPATH=/usr/local/go"
               // sh "export PATH=$PATH:$GOROOT/bin:$GOPATH/bin"
                sh "go mod init go.naous.net/api"
                sh "go mod tidy"
                sh "go build"
            }
        }
    }

    stage("Run") {
        steps {
            dir("gosample") {
            sh "./api"
            }
         }
      }   


    stage("Test") {
        steps {
            sh "curl http://localhost:1337"
         }
      }   
    }
}